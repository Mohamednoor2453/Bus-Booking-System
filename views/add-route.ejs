<!-- add-route.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Route</title>
  <!-- Add your stylesheets or other head elements here -->
</head>

<body>
  <h1>Add New Route</h1>

  <!-- Display existing routes -->
  <h2>Existing Routes</h2>
  <ul>
    <% routes.forEach(route => { %>
      <li><%= route.origin %> to <%= route.destination %> (Fare: <%= route.fare %>)</li>
    <% }); %>
  </ul>

  <!-- Form for adding a new route -->
  <form action="/admin/add-route" method="post">
    <label for="origin">Origin:</label>
    <input type="text" id="origin" name="origin" required>

    <label for="destination">Destination:</label>
    <input type="text" id="destination" name="destination" required>

    <label for="fare">Fare:</label>
    <input type="number" id="fare" name="fare" required>

    <button type="submit">Add Route</button>
  </form>

  <!-- Add your scripts or other body elements here -->
</body>

</html>
